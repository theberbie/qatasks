
<%= link_to 'Add New Task', new_task_path, class:'btn btn-info col-xs-offset-1'%>

<p class="pull-right"><strong> Reminder: </strong> Happy hour at 5:30pm </p>

<% @tasks.each do |task| %>

<div class=" booyah-box col-xs-10 col-xs-offset-1">

<h1> <%= task.created_at.strftime('%B %d, %Y') %> LQA Task </h1>
  <%= link_to 'Edit task', task_path(task)%> 
  <ul>
 <% if task.item.present? %>
     <% task.split_items(task.item).each do |item| %>

     <li> <%=item%> </li>
<%end%>
     <%end%> 
    

   </ul>
  <strong>Game</strong>: <p> <%= task.game %> </p>
  

  <% if task.user.present? %>
    <small> <%=task.user.email%> </small>
    <%end%>



  <hr />
</div>
</div>

<% end %>
