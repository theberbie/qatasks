<% @tasks.each do |task| %>

<div class="booyah-box col-sm-6  col-xs-offset-1">
<h1> Today's LQA Task </h1>
  <%= link_to task.item, task_path(task)%> 
 
  <ul>
  <li> <%= task.item %> </li>
  <li> <%= task.game %> </li>
  </ul>

  <% if task.user.present? %>
    <small> <%=task.user.email%> </small>
    <%end%>



  <hr />
</div>
<% end %>
