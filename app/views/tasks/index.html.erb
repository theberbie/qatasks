

<%= link_to 'Add New Task', new_task_path, class:'new btn btn-info pull-right'%>



<% @tasks.each do |task| %>


<div class=" booyah-box col-xs-10 col-xs-offset-1">

<h1> <%= task.created_at.strftime('%B %d, %Y') %> LQA Task </h1>
  <%= link_to 'Edit task', task_path(task)%> 
  <br>
  <br />
  
 <% if task.item.present? %>
     <% task.split_items(task.item).each do |item| %>

     <%=item.html_safe%> 
<%end%>


     <%end%> 
    

   
  <h5><strong>Game</strong>: </h5> <p> <%= task.game %> </p>


  <% if task.user.present? %>
    <small> <%=task.user.email%> </small>
    <%end%>



  <hr />
</div>
</div>

<% end %>
